{
  "name": "react-native-login-suite",
  "version": "0.2.0",
  "description": "Login iGo&amp;Suite",
  "main": "src/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src/",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-login-suite.podspec",
    "!lib/typescript/example",
    "!**/__tests__"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/LindaLopezR/react-native-login-suite",
  "author": "LindaLopezR <guadalupelopez.lr@gmail.com> (https://github.com/LindaLopezR)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LindaLopezR/react-native-login-suite/issues"
  },
  "homepage": "https://github.com/LindaLopezR/react-native-login-suite#readme",
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.0",
    "@react-native-community/bob": "^0.14.5",
    "@react-native-community/eslint-config": "^1.1.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.35",
    "@types/react-native": "0.62.7",
    "commitlint": "^17.4.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "^16.9.0",
    "react-native": "~0.70.6",
    "release-it": "^15.6.0",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "react": "^16.9.0",
    "react-native": "~0.70.6"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "no-shadow": "off",
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "crlf",
          "allow": [
            "setFilter"
          ],
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules",
    "lib"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "aar",
        {
          "reverseJetify": true
        }
      ],
      [
        "commonjs",
        {
          "copyFlow": true
        }
      ],
      "module",
      "typescript"
    ]
  },
  "dependencies": {
    "@types/react-dom": "^16.9.8",
    "@types/react-native-check-box": "^2.1.1",
    "react-dom": "^16.13.1",
    "react-native-check-box": "^2.1.7",
    "react-native-keyboard-aware-scroll-view": "^0.9.1",
    "react-test-renderer": "^16.13.1"
  },
  "prepublishOnly": "npm run build"
}
